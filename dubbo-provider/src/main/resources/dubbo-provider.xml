<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--应用配置, 不要与consumer相同, 一般为项目名-->
    <dubbo:application name="dubbo-provider"/>

    <!--zookeeper注册中心地址-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" timeout="60000"/>

    <bean id="helloWorldService" class="com.jiea.provider.HelloWorldServiceImpl"></bean>
    <!--对外暴露服务接口-->
    <dubbo:service interface="com.jiea.api.remote.HelloWorldService" ref="helloWorldService" timeout="3000" retries="0"/>
</beans>